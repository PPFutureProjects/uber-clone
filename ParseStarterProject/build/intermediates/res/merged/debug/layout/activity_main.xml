<RelativeLayout xmlns:android="http://schemas.android.com/apk/lib/com.parse.starter"
    xmlns:android2="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
    android2:layout_width="wrap_content"
    android2:layout_height="wrap_content">

    <Button
        android2:text="Sign Up as a Rider"
        android2:layout_width="match_parent"
        android2:layout_height="wrap_content"
        android2:id="@+id/btRiderLink"
        android2:layout_below="@+id/ivAppLogo"
        android2:onClick="RiderRegisterLink" />

    <ImageView
        android2:layout_height="150dp"
        app:srcCompat="@drawable/uber_clone_logo"
        android2:id="@+id/ivAppLogo"
        android2:layout_width="150dp"
        android2:layout_alignParentTop="true"
        android2:layout_centerHorizontal="true" />

    <Button
        android2:text="Sign Up as a Driver"
        android2:layout_width="match_parent"
        android2:layout_height="wrap_content"
        android2:id="@+id/btDriverLink"
        android2:layout_below="@+id/btRiderLink"
        android2:onClick="DriverRegisterLink" />

    <Button
        android2:text="Login with Existing Account"
        android2:layout_width="match_parent"
        android2:layout_height="wrap_content"
        android2:layout_below="@+id/btDriverLink"
        android2:id="@+id/btLoginLink"
        android2:onClick="LoginLink" />

</RelativeLayout>
